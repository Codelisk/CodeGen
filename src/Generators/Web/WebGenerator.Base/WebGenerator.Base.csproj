    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Common\Attributes\Codelisk.GeneratorAttributes.csproj" OutputItemType="Analyzer" />
    <ProjectReference Include="..\..\..\Common\Foundation\Foundation.csproj" OutputItemType="Analyzer" />
    <ProjectReference Include="..\..\..\Common\Shared\Shared.csproj" OutputItemType="Analyzer" />
    <ProjectReference Include="..\..\Common\Foundation.Crawler\Foundation.Crawler.csproj" OutputItemType="Analyzer" />
    <ProjectReference Include="..\..\Common\Generators.Base\Generators.Base.csproj" OutputItemType="Analyzer" />
  </ItemGroup>
</Project>
