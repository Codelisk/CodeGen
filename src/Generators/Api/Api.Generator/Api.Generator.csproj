<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>$(GeneratorTargetFramework)</TargetFramework>
    <IsRoslynComponent>true</IsRoslynComponent>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Generators\Base\**" />
    <EmbeddedResource Remove="Generators\Base\**" />
    <None Remove="Generators\Base\**" />
  </ItemGroup>

  <ItemGroup>
    <None Include="$(OutputPath)\$(AssemblyName).dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" PrivateAssets="All" />
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Common\Codelisk.GeneratorAttributes\Codelisk.GeneratorAttributes.csproj" OutputItemType="Analyzer" />
    <ProjectReference PrivateAssets="All" Include="..\..\..\Common\Foundation\Foundation.csproj" OutputItemType="Analyzer" />
    <ProjectReference PrivateAssets="All" Include="..\..\Common\Foundation.Crawler\Foundation.Crawler.csproj" OutputItemType="Analyzer" />
    <ProjectReference PrivateAssets="All" Include="..\..\Common\Generators.Base\Generators.Base.csproj" OutputItemType="Analyzer" />
  </ItemGroup>
</Project>
